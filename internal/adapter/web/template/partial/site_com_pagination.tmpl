{{define "site_com_pagination"}}

{{$startEntry := Add 1 (Mul .ComData.PageSize (Sub .ComData.Page.Number 1))}}
{{$endEntry := Add (Sub $startEntry 1) (len .ComData.Page.Rows)}}

<nav class="pagination">
	<div class="pagination__info">
		{{if len .ComData.Page.Rows}}
			{{if eq $startEntry $endEntry}}
				Showing entry <span data-locale-number>{{$startEntry}}</span> of <span data-locale-number>{{.ComData.TotalRows}}</span>
			{{else}}
				Showing entries <span data-locale-number>{{$startEntry}}</span>-<span data-locale-number>{{$endEntry}}</span> of <span data-locale-number>{{.ComData.TotalRows}}</span>
			{{end}}
		{{end}}
	</div>

	<ul class="pagination__links">
		{{if and (len .ComData.Page.Rows) (gt .ComData.TotalPages 1)}}
			{{if gt .ComData.Page.Number 1}}
				<li><a href="{{.URL.Query.String "page" "1"}}">&laquo; First</a></li>
				<li><a href="{{.URL.Query.String "page" (Sub .ComData.Page.Number 1)}}">&lt; Prev</a></li>
			{{end}}

			{{range $i := Ints (Sub .ComData.Page.Number 2) (Add .ComData.Page.Number 3)}}
				{{if and (gt $i 0) (le $i $.ComData.TotalPages)}}
					<li><a href="{{$.URL.Query.String "page" $i}}" data-locale-number>{{$i}}</a></li>
				{{end}}
			{{end}}

			{{if lt .ComData.Page.Number .ComData.TotalPages}}
				<li><a href="{{.URL.Query.String "page" (Add .ComData.Page.Number 1)}}">Next &gt;</a></li>
				<li><a href="{{.URL.Query.String "page" .ComData.TotalPages}}">Last &raquo;</a></li>
			{{end}}
		{{else if not (eq .ComData.Page.Number 1)}}
			<li><a href="{{.URL.Query.String "page" (Sub .ComData.Page.Number 1)}}">&lt; Prev</a></li>
			<li><a href="{{.URL.Query.String "page" "1"}}">Go to the first page</a></li>
		{{end}}
	</ul>
</nav>

{{end}}
