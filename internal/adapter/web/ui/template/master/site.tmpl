{{define "master_site" -}}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{block "meta_title" .}}{{.App.Name}}{{end}}</title>
		<meta name="description" content="{{block "meta_description" .}}{{.App.Description}}{{end}}">
		<link rel="stylesheet" href="/all/css/common.css">
		<link rel="stylesheet" href="/site/css/site.css">
	</head>
	<body>
		<script src="/site/js/components.js"></script>

		<a href="#main-content" class="skip-nav-link">Skip navigation</a>

		<header class="header">
			<p class="site-title">
				<a href="{{Path "page.home"}}">{{.App.Name}}</a>
			</p>

			<nav class="nav">
				<ul>
					<li><a href="{{Path "page.home"}}">Home</a></li>

					{{if .Session.IsSignedIn}}
						<li><a href="{{Path "account.dashboard"}}">Account</a></li>

						{{if .Passport.CanAccessAdmin}}
							<li><a href="{{Path "admin.dashboard"}}">Admin</a></li>
						{{end}}

						<li>
							<form action="{{Path "account.sign_out.post"}}" method="POST">
								{{template "com_csrf_input" .}}

								<button type="submit" class="btn--link">Sign out</button>
							</form>
						</li>
					{{else}}
						<li><a href="{{Path "account.sign_in"}}">Sign in</a></li>
					{{end}}
				</ul>
			</nav>
		</header>

		<main id="main-content" class="main">
			{{if .Session.IsSignedIn}}
				<div class="top-bar">
					{{if HasPathPrefix .URL.Path "admin.section"}}
						{{template "site_nav_admin" .}}
					{{end}}

					{{if HasPathPrefix .URL.Path "account.section"}}
						{{template "site_nav_account" .}}
					{{end}}
				</div>
			{{end}}

			{{block "view_head" .}}{{end}}

			{{if and .ErrorMessage (ne .View "site/error")}}
				<div class="error-banner center">
					<p>{{.ErrorMessage}}</p>
				</div>
			{{end}}

			{{range $flash := .Session.FlashError}}
				<div class="error-banner center">
					<p>{{UnescapeHTML $flash}}</p>
				</div>
			{{end}}

			{{range $flash := .Session.FlashImportant}}
				<div class="flash-banner flash-banner--important center">
					<p>{{UnescapeHTML $flash}}</p>
				</div>
			{{end}}

			{{range $flash := .Session.Flash}}
				<div class="flash-banner center">
					<p>{{UnescapeHTML $flash}}</p>
				</div>
			{{end}}

			{{block "view_body" .}}{{end}}
		</main>

		<footer class="footer">
			<p>Lorem ipsum dolor, sit amet, consectetur adipisicing elit...</p>
		</footer>
	</body>
</html>

{{- end}}
