{{define "com_passcode_input" -}}

{{$hint := or .ComData.Hint "6 digits"}}
{{$placeholder := or .ComData.Placeholder "123456"}}

{{template "com_form_input" .WithComData
	"ComData" .ComData
	"Type" "text"
	"Hint" $hint
	"Placeholder" $placeholder
	"Pattern" `^\d+$`
	"MinLength" 6
	"MaxLength" 6
}}

{{- end}}
