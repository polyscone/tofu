{{define "view"}}

<h1>Role management</h1>

<form class="bag">
	<input type="search" aria-label="Search" name="search" value="{{.URL.Query.Get "search"}}" placeholder="Search" class="grow">
	<button>Search</button>
</form>

<table class="management">
	<tr>
		<th>Name</th>
		<th class="text-right"><a href="{{Path "account.management.role.new"}}{{$.URL.Query.String}}">New</a></th>
	</tr>

	{{range .Vars.Roles.Page.Rows}}
		<tr>
			<td>{{.Name}}</td>
			<td class="text-right"><a href="{{Path "account.management.role.edit" ":roleID" .ID}}{{$.URL.Query.String}}">Edit</a></td>
		</tr>
	{{else}}
		<tr class="management__empty">
			<td colspan="2">No data found</td>
		</tr>
	{{end}}
</table>

{{template "com_pagination" .ComData .Vars.Roles}}

{{end}}
