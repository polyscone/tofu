{{define "view_head"}}

<div class="center">
	<h1>Choose a new password</h1>
</div>

{{end}}

{{define "view_body"}}

<div class="center">
	<form action="{{Path "account.reset_password.new_password.post"}}{{.URL.Query.String}}" method="POST">
		<input type="hidden" name="_csrf" value="{{.CSRF.Token}}">
		<input type="hidden" name="token" value="{{.URL.Query.Get "token"}}">

		<label for="reset-password__password">New password</label>
		<input id="reset-password__password" type="password" name="new-password" value="{{.Form.Get "new-password"}}" placeholder="new password" autocomplete="new-password" required pattern=".{8,1000}" minlength="8" maxlength="1000">
		<p class="error">{{.Errors.Get "new password"}}</p>

		<div class="bag reverse">
			<button type="submit">Update password</button>
		</div>
	</form>
</div>

{{end}}
